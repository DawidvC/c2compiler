// @warnings{no-unused}
module test;

func void test1() {
    float f = 3.14;
    int32 i = 1;
    int32 a = (f ? 1 : 0);  // @error{invalid type conversion from 'float32' to 'bool'}

    int8 c = (1 ? 'c' : 'd');
    int8 d = (1 ? 'c' : i); // @warning{implicit conversion loses integer precision: 'int32' to 'int8'}
    int8 e = (1 ? i : 0);   // @warning{implicit conversion loses integer precision: 'int32' to 'int8'}
    int8 g = (1 ? i         // @warning{implicit conversion loses integer precision: 'int32' to 'int8'}
                : f);       // @warning{implicit conversion turns floating-point number into integer: 'float32' to 'int8'}
}

